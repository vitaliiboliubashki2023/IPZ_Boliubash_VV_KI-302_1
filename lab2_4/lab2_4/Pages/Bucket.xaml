<Window
    Title="Bucket"
    WindowState="Maximized"
    mc:Ignorable="d"
    x:Class="lab2_4.Bucket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid>
        <Button
            Click="Close"
            Content="Вийти"
            Height="40"
            HorizontalAlignment="Left"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="100" />

        <Button
            Click="ReceiptClick"
            Content="Отримати чек"
            Height="40"
            HorizontalAlignment="Right"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="150" />

        <StackPanel Margin="20,60,20,20" Orientation="Vertical">
            <ScrollViewer Margin="0,10,0,0" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Columns="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="10"
                                Padding="10">
                                <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Margin="0,0,0,5"
                                        Text="{Binding Name}"
                                        TextAlignment="Center" />
                                    <Button
                                        Click="BucketDeleteClick"
                                        Content="Видалити"
                                        Width="250" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>