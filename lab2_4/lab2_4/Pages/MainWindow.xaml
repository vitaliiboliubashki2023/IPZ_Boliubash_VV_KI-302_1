<Window
    Title="MainPage"
    WindowState="Maximized"
    mc:Ignorable="d"
    x:Class="lab2_4.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid>
        <Button
            Click="Close"
            Content="Вийти"
            Height="40"
            HorizontalAlignment="Left"
            Margin="30,10,0,0"
            VerticalAlignment="Top"
            Width="100" />
        <Button
            Click="BucketClick"
            Content="Корзина"
            Height="40"
            HorizontalAlignment="Right"
            Margin="0,10,30,0"
            VerticalAlignment="Top"
            Width="200" />

        <Grid Margin="20,60,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Для TextBox та ComboBox  -->
                <RowDefinition Height="*" />
                <!--  Для ItemsControl з прокруткою  -->
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Vertical">
                <TextBox
                    Height="30"
                    Margin="0,0,0,10"
                    Text="{Binding SearchName, UpdateSourceTrigger=PropertyChanged}"
                    Width="300" />

                <ComboBox
                    Height="30"
                    ItemsSource="{Binding Categories}"
                    Margin="0,0,0,10"
                    SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}"
                    Width="300" />
            </StackPanel>

            <ScrollViewer
                Grid.Row="1"
                Margin="0,10,0,0"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredItems}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                Columns="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="10"
                                Margin="10"
                                Padding="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Grid.Column="0"
                                        Margin="0,0,5,0"
                                        Text="{Binding Name}"
                                        TextAlignment="Left" />

                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        Orientation="Vertical">
                                        <Button
                                            Click="BucketAddClick"
                                            Content="Додати в корзину"
                                            Width="250" />

                                        <Button
                                            Click="RateMedicineClick"
                                            Content="Оцінити ліки"
                                            Width="250" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
