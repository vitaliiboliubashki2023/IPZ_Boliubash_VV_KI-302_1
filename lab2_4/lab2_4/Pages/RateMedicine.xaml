<Window
    Height="450"
    Title="RateMedicine"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_4.Pages.RateMedicine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_4.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>
    <Grid>
        <Button
            Click="Close"
            Content="Закрити"
            Height="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Width="100" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0,0,0,10" Text="Введіть оцінку ліків" />
            <TextBox
                Height="30"
                Text="{Binding Rating}"
                Width="300" />
            <Button
                Click="SendClick"
                Content="Надіслати оцінку"
                Height="50" />

            <!--  Додайте TextBlock для відображення ціни  -->
            <TextBlock Margin="0,10,0,0" Text="{Binding Medicine.Price, StringFormat='Ціна: {0:C}'}" />
        </StackPanel>
    </Grid>
</Window>