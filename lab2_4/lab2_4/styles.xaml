<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Стиль для кнопок  -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="#4CAF50" />
        <!--  Зелений фон кнопки  -->
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#388E3C" />
        <!--  Темніший зелений для обводки  -->
        <Setter Property="Foreground" Value="#FFFFFF" />
        <!--  Білий текст  -->
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#388E3C" />
                <!--  Зміна фону при наведенні  -->
                <Setter Property="BorderBrush" Value="#2E7D32" />
                <!--  Темніший зелений для обводки при наведенні  -->
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#2E7D32" />
                <!--  Зміна фону при натисканні  -->
                <Setter Property="BorderBrush" Value="#1B5E20" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Стиль для рамок  -->
    <Style TargetType="Border">
        <Setter Property="Background" Value="#F0F4F8" />
        <!--  Світлий фон для рамок  -->
    </Style>

    <!--  Стиль для заголовків/міток  -->
    <Style TargetType="TextBlock" x:Key="LabelStyle">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="#2A2A2A" />
        <!--  Темний текст  -->
        <Setter Property="Margin" Value="5,0,20,20" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Стиль для відображення значень  -->
    <Style TargetType="TextBlock" x:Key="ValueStyle">
        <Setter Property="Margin" Value="5,0,5,15" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Foreground" Value="#2A2A2A" />
    </Style>

    <!--  Стиль для контекстного меню  -->
    <Style TargetType="ContextMenu">
        <Setter Property="Background" Value="#F0F4F8" />
        <!--  Світлий фон для контекстного меню  -->
        <Setter Property="BorderBrush" Value="#B0BEC5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!--  Стиль для пунктів контекстного меню  -->
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="#2A2A2A" />
        <!--  Темний текст  -->
        <Setter Property="Background" Value="#F5F5F5" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="8" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E0E0E0" />
                <!--  Світлий фон при наведенні  -->
                <Setter Property="Foreground" Value="#212121" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
