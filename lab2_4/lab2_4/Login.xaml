<Window
    Height="450"
    Title="Login"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab2_4.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab2_4"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Window.Resources>
        <ResourceDictionary Source="styles.xaml" />
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20">
            <TextBlock
                FontSize="20"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
                Text="Сторінка логіну" />

            <TextBlock Text="Електронна пошта:" />
            <TextBox Text="{Binding name}" x:Name="UsernameTextBox" />

            <TextBlock Text="Пароль:" />

            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" x:Name="PasswordBox" />

            <TextBlock HorizontalAlignment="Right" Margin="0,10,0,0">
                <Hyperlink Click="OpenRegisterWindow_Click" Cursor="Hand">
                    Немає облікового запису?
                </Hyperlink>
            </TextBlock>


            <Button
                Click="LoginButton_Click"
                Content="Логін"
                Height="35"
                HorizontalAlignment="Center"
                Width="120" />
        </StackPanel>
    </Grid>
</Window>
